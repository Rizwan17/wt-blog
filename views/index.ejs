<%- include('header.ejs') %>
<section>
    <nav>
        <ul>
            <% blogs.forEach(function(blog){ %>
                <li><a href="<%= blog.id %>"><%= blog.title %></a></li>
            <% }) %>
        </ul>
    </nav>

    <article>
        <h1><%= blog.title %></h1>
        <p><%= blog.body %></p>
    </article>

</section>
